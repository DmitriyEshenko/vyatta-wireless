priority: 317   # must be set before hostap/wpasupplicant
help: Set the Media Access Control (MAC) address of this interface
syntax:expression: exec "\
	/opt/vyatta/sbin/vyatta-interfaces.pl --dev $VAR(../@) --valid-mac $VAR(@)"
